@model IEnumerable<IJPMvcApp.Models.Skill>

@{
    ViewData["Title"] = "Index";
}
<div class="container">
<h1 style="text-align: center; font-weight:bold">Index</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Skill</a>

</p>

    <table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SkillId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SkillName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SkillLevel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SkillCategory)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SkillId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SkillName)
            </td>

            <td>
                        @Helper.GetSkillLevelName(item.SkillLevel)

            </td>
            <td>
                @Helper.GetSkillCategoryName(item.SkillCategory)
            </td>
            <td>
                        @Html.ActionLink("Edit", "Edit", new { skillId = item.SkillId }, new { @class = "btn btn-primary" }) 
                        @Html.ActionLink("Details", "Details", new { skillId = item.SkillId }, new { @class = "btn btn-primary" }) 
                        @Html.ActionLink("ByCategory", "ByCategory", new { skillCategory = item.SkillCategory }, new { @class = "btn btn-primary" }) 
                        @Html.ActionLink("ByLevel", "ByLevel", new { skillLevel = item.SkillLevel }, new { @class = "btn btn-primary" })
                        @Html.ActionLink("Delete", "Delete", new { skillId = item.SkillId }, new { @class = "btn btn-danger" })




                    </td>
        </tr>
}
    </tbody>
</table>
    <div>
        <a asp-area="" asp-controller="Home" asp-action="Index" class="btn btn-primary" style="margin-top:15px; margin-bottom:15px;">Back to Home</a>
    </div>
</div>