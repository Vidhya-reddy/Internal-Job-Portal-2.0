@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}
<div class="container">
    <h1 class="text-danger">Oops!</h1> 
    <h2 class="text-danger">It appears that there was a problem with your request.</h2>
    <br />
<h3 class="text-danger">@Html.Raw(@ViewBag.ErrorMessage)</h3>

    <a asp-action="Index" class="btn btn-primary" style="margin-top:15px; margin-bottom:15px;">Back to List </a>
</div>